[user]
  name = Blake Williams
  email = blake@blakewilliams.me
[github]
  user = BlakeWilliams
[init]
  templatedir = ~/.git_template
  defaultBranch = main
[color]
  ui = true
[format]
  pretty = oneline
[core]
  excludesfile = ~/.excludes
  whitespace = trailing-space,space-before-tab
[advice]
  pushNonFastForward = false
  statusHints = false
[commit]
  template = ~/.gitmessage
  gpgsign = false
  verbose = true
[fetch]
  prune = true
[push]
  default = current
[pull]
  rebase = true
[merge]
  ff = only
[alias]
  aa = add --all
  ap = !git add --all --intent-to-add && git add -p
  c = commit
  ca = commit --amend
  ci = !hub ci-status -v
  co = checkout
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
  d = diff
  ds = diff --staged
  fuckit = !sh -c 'git add --all && git reset --hard'
  longer = log --pretty='%C(yellow)%h%Creset - %s%n%C(green)%an%Creset commited %ar%n'
  p = push -u
  pf = push -u --force-with-lease
  retro = log --since='7 days ago' --author=\"Blake Williams\"
  standup = log --since=yesterday --author=\"Blake Williams\"
  up = !git fetch origin && git rebase -i origin/master
[status]
  branch = 1
  short = 1
[diff]
  colorMoved = zebra
[credential]
  helper = osxkeychain
[log]
  decorate = short
  abbrevCommit = true
