[user]
  name = Blake Williams
  email = blake@blakewilliams.me
[github]
  user = BlakeWilliams
[init]
  templatedir = ~/.git_template
  defaultBranch = main
[color]
  ui = true
[format]
  pretty = oneline
[core]
  excludesfile = ~/.excludes
  whitespace = trailing-space,space-before-tab
[advice]
  pushNonFastForward = false
  statusHints = false
[commit]
  template = ~/.gitmessage
  gpgsign = false
  verbose = true
[fetch]
  prune = true
  pruneTags = true
[push]
  default = current
  autoSetupRemote = true
  followTags = true
[pull]
  rebase = true
[merge]
  ff = only
[alias]
  aa = add --all
  ap = !git add --all --intent-to-add && git add -p
  c = commit
  ca = commit --amend
  ci = !hub ci-status -v
  co = checkout
  conflicts = diff --diff-filter=U
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
  d = diff
  deets = show --pretty=full
  ds = diff --staged
  fuckit = !sh -c 'git add --all && git reset --hard'
  longer = log --pretty='%C(yellow)%h%Creset - %s%n%C(green)%an%Creset commited %ar%n'
  p = "![ $(git config \"branch.$(git symbolic-ref --short HEAD).merge\") = '' ] && git push -u || git push"
  pf = p --force-with-lease
  retro = log --since='7 days ago' --author=\"Blake Williams\"
  standup = log --since=yesterday --author=\"Blake Williams\"
  up = !git fetch origin && git rebase -i origin/master
  squash = "!f() { git reset --soft $(git merge-base HEAD \"$@\") && git commit; }; f"
[status]
  branch = 1
  short = 1
[diff]
  algorithm = histogram
  renames = true
[credential]
  helper = store
[log]
  decorate = short
  abbrevCommit = true
[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
[color "diff"]
  meta = yellow
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[rerere]
  enabled = true
  autoupdate = true
[rebase]
  autoStash = true
  updateRefs = true
