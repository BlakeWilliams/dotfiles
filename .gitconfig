[user]
  name = Blake Williams
  email = blake@blakewilliams.me
[github]
  user = BlakeWilliams
[color]
  ui = true
[format]
  pretty = "%C(yellow)%h%Creset - %s%nAuthored by %C(green)%an%Creset %ar%n"
[core]
  excludesfile = ~/.excludes
  whitespace = trailing-space,space-before-tab
[advice]
  pushNonFastForward = false
  statusHints = false
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[push]
  default = current
[pull]
  rebase = true
[merge]
  ff = only
[alias]
  a  = add
  aa = add --all
  ap = add -i
  ca = commit --amend
  c  = commit -v
  co = checkout
  cb = checkout -b
  db = branch -d
  d  = diff
  ds = diff --staged
  up = !git fetch origin && git rebase -i origin/master
  fuckit = !sh -c 'git add --all && git reset --hard'
  standup = log --since=yesterday --author=\"Blake Williams\"
  pr = !hub pull-request
  safe = !mkdir .git/safe
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[status]
  branch = 1
  short = 1
